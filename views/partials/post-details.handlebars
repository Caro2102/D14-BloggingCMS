<div class="card my-3 mx-auto border border-dark w-75">
    <a href="/post/{{id}}" style="text-decoration: none;">
        <div class="card-header bg-dark">
            <div class="container ">
                <div class="row row-cols-2">
                <div class="col text-start text-light" ><h5>{{title}}</h5></div>
                <div class="col text-end text-light"> Posted by {{user.name}} on {{format_date published_on}}</div>
                </div>
            </div>
        </div>
        <div class="card-body bg-success-subtle text-start">
            <p class="fs-5 text-start text-dark">{{content}}</p>
        </div>
    </a>
</div>
